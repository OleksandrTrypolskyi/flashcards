<% if flash %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>
<% end %>
<table class="cards-index-table">
  <tr>
    <th>Original_text</th>
    <th>Translated_text</th>
    <th>Review_date</th>
    <th>Actions</th>
  </tr>
  <% @cards.each do |c| %>
    <tr>
      <td><%= c.original_text %></td>
      <td><%= c.translated_text %></td>
      <td><%= c.review_date.day %>/<%= c.review_date.month %>/<%= c.review_date.year %></td>
      <td>
        <%= link_to 'Show', card_path(c) %><br>
        <%= link_to 'Edit', edit_card_path(c) %><br>
        <%= link_to 'Delete', card_path(c), method: :delete,
          data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>
