<!DOCTYPE html>
<html>
  <head>
    <title>Флэшкарточкер</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="clearfix navbar navbar-inverse">
      <h1>Флэшкарточкер</h1>
        <ul class="navigation-links nav navbar-nav navbar-right">
          <li><%= link_to "Все карточки", cards_path, class: "btn btn-default" %></li>
          <li><a class="btn btn-default" href="#">Добавить карточку</a></li>
        </ul>
      </header>
    <section id="container">
      <%= yield %>
    </section>
  </body>
</html>
